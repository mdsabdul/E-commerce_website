<%- include("./partials/header") %>
<div class="bg-blue-800 min-h-screen w-full text-white overflow-y-auto md:pt-[12vw] lg:pt-[7vw]">
    <div class="fixed top-0 w-full z-10">
        <%- include("./partials/nav") %>
    </div>
    <div class="w-full flex gap-8 lg:px-10 md:px-20 mt-10 flex-wrap justify-center pb-5">
        <% allproducts.forEach((item) => { %>
            <div class="lg:w-[17vw] lg:pb-2 md:pb-[2vw] md:w-full bg-slate-800 rounded-[5px] overflow-hidden text-white relative">
                <img class="lg:h-[35vh] lg:w-full md:h-[100vw] md:w-full object-cover object-center" src="<%= item.productimage %>" alt="">
                <h4 class="px-4 pt-5 font-semibold lg:text-[1.2rem] md:text-4xl capitalize"><%= item.title %></h4>
                <h4 class="px-4 lg:text-xl md:text-4xl md:my-4 lg:my-0">Price - <%= item.price %> </h4>
                <div class="flex justify-between px-4 lg:mt-2 md:mt-5">

                    <a class="bg-slate-900 lg:px-2 lg:py-1 md:py-4 md:px-5 rounded text-slate-400 lg:text-xl md:text-4xl lg:font-normal font-semibold" href="/cart">Buy Now</a>
                    <a class="absolute top-0 right-0" href="/remove/<%=item._id%>">
                      <%  if(user.email === "ks0765655@gmail.com"){%>

                            <i class="ri-delete-bin-5-line text-yellow-500 lg:text-4xl md:text-8xl"></i>
                      <%  }%> 
                    </a>
                    <a class="bg-slate-900 lg:px-2 lg:py-1 md:py-4 md:px-5 rounded text-slate-400 lg:text-xl lg:font-normal md:text-4xl font-semibold" href="/addtocart/<%= item._id %>">Add To Cart</a>
                </div>
            </div>
        <% }) %>
    </div>
</div>
<%- include("./partials/footer") %>
