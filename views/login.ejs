<%- include("./partials/header") %>
<div class="bg-blue-800 min-h-screen w-full text-white flex items-center justify-center">
    <form class=" relative sm:w-full lg:w-1/2 px-5  bg-transparent gap-5 text-black  rounded" action="/users/login" method="post">
        <h1 class="text-center text-white text-3xl sm:text-4xl md:text-5xl font-bold mb-4">SIGN IN / LOGIN</h1>
        <div class="flex flex-col gap-5 w-full">
            <input type="text" name="username" placeholder="Username" class="py-4 px-3 text-black rounded-md border border-gray-300">
            <input type="password" name="password" placeholder="Password" class="py-4 px-3 text-black rounded-md border border-gray-300">
            <button class="bg-slate-800 text-lg sm:text-xl font-semibold md:text-2xl py-3 sm:py-4 text-white border rounded-lg hover:bg-slate-700 transition duration-300">Login</button>
        </div>
        <p class="text-white text-sm sm:text-xl md:text-lg text-center sm:mt-4 ">Don't have an account? <a class="text-yellow-500 hover:underline" href="/users/register">Register!</a></p>
    </form>
</div>
<%- include("./partials/footer") %>
