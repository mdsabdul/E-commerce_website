<%-include("./partials/header")%>
    <div class="bg-blue-800 h-[100vh] w-full text-white ">

        <div class="flex justify-center items-center h-screen">
           
            <div class="flex relative  items-center h-[55%] w-[45%] bg-blue-900 rounded flex-col ">
                <a class="absolute top-[4%] right-[4%] py-2 px-6 bg-slate-500 rounded"  href="/logout">Logout</a>
                <div class="h-[10vw] w-[10vw] bg-red-500 rounded-full mt-3 overflow-hidden mb-5 ">
                    <img class="object-cover object-bottom " src="<%= user.image%>" alt="">
                </div>
                <h1 class="uppercase">
                    <%=user.name%>
                </h1>
                <h1 class="mb-5">
                    <%=user.email%>
                </h1>
                <div>
                    <form action="/users/profilechange" method="post" enctype="multipart/form-data">
                        <input type="file" name="profileimage" placeholder="Image_url" id="">
                        <button class="px-4 py-2 bg-slate-500 rounded">Change</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <%-include("./partials/footer")%>